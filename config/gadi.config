// profile for the Gadi supercomputer at NCI
// Before running will need to run: 
// module load nextflow singularity 

// Gadi specific parameters
// More info: https://opus.nci.org.au/display/DAE/Nextflow
params {
    pbs_account = ''
    whoami = ''
}


// Preset use of containers with Singularity
singularity {
    enabled = true
    cacheDir = "/scratch/${params.pbs_account}/${params.whoami}/singularity"
    autoMounts = true
    autoCleanUp = true
    temp = "scratch/${params.pbs_account}/${params.whoami}/containers"
}


process {
    module = 'singularity'
    cache = 'lenient'
    stageInMode = 'symlink'
    executor = 'pbspro'
    project = ''
    storage = 'scratch/'
    queue = 'normal'

withName: 'mutect2' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 10
        time = '3h'
        memory = '40.GB'
}

